	BiFunction<CLASS_STRING_TYPE[], CLASS_STRING_VALUE_TYPE[], MAP KEY_VALUE_STRING_GENERIC_TYPE> arrayConstructor;
#endif
	Function<Map<? extends CLASS_STRING_TYPE, ? extends CLASS_STRING_VALUE_TYPE>, MAP KEY_VALUE_STRING_GENERIC_TYPE> mapConstructor;
	Function<MAP KEY_VALUE_STRING_GENERIC_TYPE, MAP KEY_VALUE_STRING_GENERIC_TYPE> pMapConstructor;
	KEY_STRING_TYPE[] keys = createKeyElements();
	VALUE_STRING_TYPE[] values = createValueElements();
	
	protected void setSimpleConstructor(Supplier<MAP KEY_VALUE_STRING_GENERIC_TYPE> simpleConstructor) {
